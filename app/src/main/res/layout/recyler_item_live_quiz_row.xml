<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:padding="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_20dp_white"
            android:padding="10dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/recyclerItemLiveQuizImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_friend_avatar_2"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintHeight_percent="0.8"
                android:layout_margin="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/recyclerItemLiveQuizTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Example Text"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/recyclerItemLiveQuizImageView"
                />
            <TextView
                android:id="@+id/recyclerItemLiveQuizSubTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Example Text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintStart_toEndOf="@id/recyclerItemLiveQuizImageView"
                app:layout_constraintTop_toBottomOf="@id/recyclerItemLiveQuizTitleTextView"/>
            <ImageButton
                android:id="@+id/recyclerItemLiveQuizEditImageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit_64"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                app:layout_constraintTop_toBottomOf="@id/recyclerItemLiveQuizSubTitleTextView"
                app:layout_constraintStart_toEndOf="@id/recyclerItemLiveQuizImageView"/>
            <ImageButton
                android:id="@+id/recyclerItemLiveQuizDeleteImageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_delete_64"
                android:background="@null"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:clickable="true"
                app:layout_constraintTop_toBottomOf="@id/recyclerItemLiveQuizSubTitleTextView"
                app:layout_constraintStart_toEndOf="@id/recyclerItemLiveQuizEditImageButton"
                />
            <ImageButton
                android:id="@+id/recyclerItemLiveQuizExamineImageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_examine_64"
                android:background="@null"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toEndOf="@id/recyclerItemLiveQuizDeleteImageButton"
                app:layout_constraintTop_toBottomOf="@id/recyclerItemLiveQuizSubTitleTextView"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>