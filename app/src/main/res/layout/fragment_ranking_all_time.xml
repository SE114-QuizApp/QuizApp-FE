<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_ranking_all_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_hue"
    tools:context=".fragments.AllTimeRankingFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/top3">

            <!-- Podium 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_20dp_transparent"
                    android:backgroundTint="@color/white"
                    android:foregroundTint="@color/white"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <!-- Avatar, Name, Point -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Avatar -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:elevation="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/silver_badge" />
                    <!-- Avatar -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatar2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_avatar"
                        android:layout_marginTop="6dp"/>

                    <!-- Name -->
                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/border_20dp_white"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Name 1"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Point -->
                    <TextView
                        android:id="@+id/point2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/border_20dp_white"
                        android:backgroundTint="@color/light_purple"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="100"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Podium 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_20dp_transparent"
                    android:backgroundTint="@color/white"
                    android:foregroundTint="@color/white"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <!-- Avatar, Name, Point -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Avatar -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:elevation="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gold_badge" />
                    <!-- Avatar -->

                    <!-- Name -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatar1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_avatar"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/border_20dp_white"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Name 1"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Point -->
                    <TextView
                        android:id="@+id/point1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/border_20dp_white"
                        android:backgroundTint="@color/light_purple"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="100"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Podium 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/border_20dp_transparent"
                    android:backgroundTint="@color/white"
                    android:foregroundTint="@color/white"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

                <!-- Avatar, Name, Point -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Avatar -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:elevation="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bronze_badge" />
                    <!-- Avatar -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatar3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_avatar"
                        android:layout_marginTop="6dp" />

                    <!-- Name -->
                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/border_20dp_white"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Name 1"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Point -->
                    <TextView
                        android:id="@+id/point3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/border_20dp_white"
                        android:backgroundTint="@color/light_purple"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="100"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_20dp_white"
            android:backgroundTint="@color/medium_gray_purpil"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:layout_below="@id/top3"
            />
    </RelativeLayout>


</androidx.core.widget.NestedScrollView>