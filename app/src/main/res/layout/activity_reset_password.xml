<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResetPasswordActivity">
<!--    Back Arrow-->
<ImageView
    android:id="@+id/resetPasswordBackArrowImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:src="@drawable/ic_arrow_back_24_black"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    />
<!--    Title-->
    <TextView
        android:id="@+id/resetPasswordTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
<!--    Reset Password Rule-->
    <TextView
        android:id="@+id/resetPasswordRuleTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:text="Enter your email and we will send you a link to reset your password"
        app:layout_constraintStart_toStartOf="@id/resetPasswordBackArrowImageView"
        app:layout_constraintTop_toBottomOf="@id/resetPasswordTitleTextView"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.07"
        />
<!--    Email Address Sub Title-->
    <TextView
        android:id="@+id/resetPasswordSubTitleTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Email Address"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/resetPasswordRuleTextView"
        app:layout_constraintTop_toBottomOf="@id/resetPasswordRuleTextView"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.04"
        />
<!--    Enter Email Section-->
    <LinearLayout
        android:id="@+id/resetPasswordEnterEmailEditTextLinearLayout"
        android:weightSum="10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:background="@drawable/border_20dp_white"
        android:layout_marginTop="10sp"
        android:layout_marginStart="5sp"
        app:layout_constraintStart_toStartOf="@id/resetPasswordSubTitleTextView"
        app:layout_constraintTop_toBottomOf="@id/resetPasswordSubTitleTextView"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintHeight_percent="0.075">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/ic_email"
            android:layout_marginStart="15sp"
            />
        <EditText
            android:id="@+id/resetPasswordEnterEmailEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:layout_marginStart="15sp"
            android:textSize="18sp"
            android:hint="Enter your email address"
            android:textColor="@color/black"
            android:background="@null"
            android:inputType="text"
            />
    </LinearLayout>
<!--    Reset Password Button-->
    <TextView
        android:id="@+id/resetPasswordButtonTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="125sp"
        android:text="Reset Password"
        android:textColor="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:background="@drawable/border_20dp_purple_hue"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/resetPasswordEnterEmailEditTextLinearLayout"
        app:layout_constraintStart_toStartOf="@id/resetPasswordEnterEmailEditTextLinearLayout"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintHeight_percent="0.075"
        />
</androidx.constraintlayout.widget.ConstraintLayout>