<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DiscoverySearchActivity"
    android:background="@color/purple_hue">
    <!--        Back Arrow  -->
    <ImageView
        android:id="@+id/discoverySearchBackArrowImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_24_white" />
    <!--        Text: Discovery  -->
    <TextView
        android:id="@+id/discoverySearchDiscoverTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <!--        Search Bar  -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/discoverySearchSearchView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20sp"
        app:iconifiedByDefault="false"
        android:background="@drawable/border_20dp_iris"
        android:focusable="false"
        app:searchHintIcon="@null"
        app:queryHint="Search ..."
        app:searchIcon="@drawable/ic_search_24_black"
        app:closeIcon="@drawable/ic_clear_24_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discoverySearchDiscoverTextView"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.075">
    </androidx.appcompat.widget.SearchView>
<!--    White content-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/border_20dp_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discoverySearchSearchView"
        app:layout_constraintBottom_toBottomOf="parent">
<!--        TabLayout-->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/discoverySearchTabLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20sp"
            android:background="@drawable/border_20dp_white_no_outline"
            android:layout_marginHorizontal="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Users"/>
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quizzes"/>
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"/>
        </com.google.android.material.tabs.TabLayout>
<!--        Main content-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20sp"
            android:fillViewport="true"
            app:layout_constraintHeight_percent="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discoverySearchTabLayout">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/discoverySearchViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"/>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>